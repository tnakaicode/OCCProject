{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}/AppProject/AppProject.vcxproj",
                "/property:Configuration=Debug",
                "/property:Platform=x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "build-qt",
            "type": "shell",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}/QtProject/QtProject.vcxproj",
                "/property:Configuration=Debug",
                "/property:Platform=x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            //"dependsOn": ["build-qt-clean"], // ビルド前にクリーンを実行
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "build-qt-clean",
            "type": "shell",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}/QtProject/QtProject.vcxproj",
                "/t:Clean", // Clean タスクを実行
                "/property:Configuration=Debug",
                "/property:Platform=x64"
            ],
            "problemMatcher": []
        },
        {
            "label": "build-opencascade-viewer",
            "type": "shell",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}/OpenCASCADEViewer/OpenCASCADEViewer.vcxproj",
                "/property:Configuration=Debug",
                "/property:Platform=x64"
            ],
            "presentation": {
                "reveal": "always", // ターミナルを表示
                "panel": "shared",  // 同じターミナルを使用
                "clear": false      // ターミナルをクリアしない
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": ["build-opencascade-viewer-clean"], // ビルド前にクリーンを実行
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "build-opencascade-viewer-clean",
            "type": "shell",
            "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
            "args": [
                "${workspaceFolder}/OpenCASCADEViewer/OpenCASCADEViewer.vcxproj",
                "/t:Clean", // Clean タスクを実行
                "/property:Configuration=Debug",
                "/property:Platform=x64"
            ],
            "problemMatcher": []
        },
        {
            "label": "deactivate-conda",
            "type": "shell",
            "command": "conda",
            "args": ["deactivate"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build-and-deactivate",
            "dependsOn": ["build", "deactivate-conda"],
            "problemMatcher": []
        }
    ]
}